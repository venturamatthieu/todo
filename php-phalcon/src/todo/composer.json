{
    "name": "app/todo-php-phalcon",
    "license": "MIT",
    "type": "project",
    "description": "The todo web app with Phalcon",
    "keywords": [
        "phalcon",
        "todo",
        "rest",
        "api"
    ],
    "authors": [
        {
            "name": "Matthieu Ventura",
            "email": "venturamatthieu@gmail.com",
            "homepage": "http://www.matthieu-ventura.net"
        }
    ],
    "require": {
        "php": ">=5.6",
        "ext-json": "*",
        "ovr/phalcony": "~0.2.4",
        "phalconeye/framework": "0.5.*@dev",
        "symfony/console": "*",
        "socialconnect/auth": "~0.2",
        "ovr/phalcon-pretty-exceptions": "dev-master"

    },
    "require-dev": {
        "composer/composer": "1.0.*@dev",
        "squizlabs/php_codesniffer": "~2.2"

    },
    "autoload": {
        "psr-0": {
            "Todo\\": "app/", 
            "Backman\\": "library/Backman"
        }
    },
    "scripts": {
        "post-install-cmd": [
        ],
        "post-update-cmd": [
        ]
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist",
        "platform": {
            "php": "5.6"
        }
    },
    "extra": {
        "todo-app-dir": "app",
        "todo-public-dir": "public"
        
    }
}
